<div>
    <div class="row ps-3 pt-4"><h1>Cập Nhật Thông Tin Mẹ</h1></div>
        <form method="POST" action="/admin/user/info/update/parent/{{parent._id}}?_method=PUT">
            <div class="row">
                <a href="/admin/user/info/{{parent._id}}" class="btn btn-danger ms-auto" style="width: 100px;">Huỷ</a>
                <button type="submit" class="btn btn-primary ms-3 me-5" style="width: 100px;">Lưu</button>
            </div>
            <div class="row mt-5">
                <div class="col-3"></div>
                <div class="col-6 shadow-sm">
                    <div class="row ms-auto">

                        <div class="row">
                            <div class="col-4"><strong>Họ Tên</strong></div>
                            <div class="col-8">
                                <input class="form-control" id="name" name="name" type="text"  value="{{parent.name}}" aria-label=" example">

                            </div>
                        </div>
                        <div class="row mt-5">
                            <div class="col-4"><strong>Giới Tính</strong></div>
                            <div class="col-8">
                                <input class="form-control" id="gender" name="gender" type="text"  value="{{parent.gender}}" aria-label=" example">

                            </div>
                        </div>
                        <div class="row mt-5">
                            <div class="col-4"><strong>Ngày Sinh</strong></div>
                            <div class="col-8">
                                <input class="form-control" id="date-of-bitrh" name="dateOfBirth" type="text"  value="{{parent.dateOfBirth}}" aria-label=" example">

                            </div>
                        </div>
                        <div class="row mt-5">
                            <div class="col-4"><strong>Quê Quán</strong></div>
                            <div class="col-8">
                                <input class="form-control" id="address" name="address" type="text"  value="{{parent.address}}" aria-label=" example">

                            </div>
                        </div>
                        <div class="row mt-5">
                            <div class="col-4"><strong>SĐT</strong></div>
                            <div class="col-8">
                                <input class="form-control" id="phone" number="phone" type="text"  value="{{parent.phone}}" aria-label=" example">
                            </div>
                        </div>
                        <div class="row mt-5">
                            <div class="col-4"><strong>Email</strong></div>
                            <div class="col-8">
                                <input class="form-control" id="email" name="email" type="text"  value="{{parent.email}}" aria-label=" example">

                            </div>
                        </div>
                    </div>
                    
                </div>
                <div class="col-3"></div>
            </div>
            
        </form>
    </div>
</div>